import java.awt.List;

//how to store the value in a variable which are getting in loop
public class Palindrome {

	public static void main(String[] args) {

		String input = "DINESH";
		char output;
		System.out.println(input.indexOf(1));

	char ch[] = input.toCharArray();

		for (int j = input.length() - 1; j >= 0; j--) {
			output = ch[j];
			
			  if (input.indexOf(j)== output){
			  System.out.print("Entered value is Palindrome"); } else{
			  System.out.print("Entered value is Palindrome"); }
			 
			System.out.print(output);
		}
	}
	// System.out.println(output);
}
